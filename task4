html
<h2>Weekly Productivity Report</h2>
<div id="report"></div>
<button id="clear">Clear Data</button>
css
.unproductive {
  color: red;
}

#clear {
  width: 100%;
  padding: 8px;
  margin-top: 15px;
  background-color: #f44336;
  color: white;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}
js
const reportDiv = document.getElementById("report");

const data = [
  { site: "github.com", minutes: 15, productive: true },
  { site: "youtube.com", minutes: 5, productive: false },
  { site: "stackoverflow.com", minutes: 8, productive: true }
];

data.forEach(({ site, minutes, productive }) => {
  const status = productive ? "Productive" : "Unproductive";
  const className = productive ? "productive" : "unproductive";

  const div = document.createElement("div");
  div.className = `site ${className}`;
  div.textContent = `${site} â€” ${minutes} mins (${status})`;
  reportDiv.appendChild(div);
});

document.getElementById("clear").addEventListener("click", () => {
  reportDiv.innerHTML = "<p>Data cleared.</p>";
});
